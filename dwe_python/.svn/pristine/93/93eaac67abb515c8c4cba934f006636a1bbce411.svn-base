from tkinter import *


root = Tk()

lab = Label(root, text="Сколько штук?", font="Arial 14")
lab.pack()

var=IntVar()
var.set(1)
rad0 = Radiobutton(root,text="0-10",
    variable=var,value=0)
rad1 = Radiobutton(root,text="11-20",
    variable=var,value=1)
rad2 = Radiobutton(root,text="21-30",
    variable=var,value=2, bg="blue", fg="cyan")

rad0.pack()
rad1.pack()
rad2.pack()

lab2 = Label(root, text="Какого цвета?", font="Arial 14")
lab2.pack()

c1 = IntVar()
c2 = IntVar()
c3 = IntVar()
c4 = IntVar()

che1 = Checkbutton(root,text="RED",
    variable=c1,onvalue=1,offvalue=0)
che2 = Checkbutton(root,text="BLUE",
    variable=c2,onvalue=1,offvalue=0)
che3 = Checkbutton(root,text="GREEN",
    variable=c3,onvalue=1,offvalue=0)
che4 = Checkbutton(root,text="YELLOW",
    variable=c4,onvalue=1,offvalue=0)

che1.pack()
che2.pack()
che3.pack()
che4.pack()





root.mainloop()



